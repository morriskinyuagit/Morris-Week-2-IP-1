pipeline {
  agent any
  tools {
    nodejs 'Nodejs'
  }
  stages {
    stage('Clone Repo') {
      steps {
        echo 'Cloning the repository'
        git 'https://github.com/morriskinyuagit/Morris-Week-2-IP-1.git'
      }
    }
    stage('Install Dependencies') {
      steps {
        echo 'Installing dependencies'
        sh 'npm install'
      }
    }
    stage('Run Tests') {
      steps {
        echo 'Running tests'
        sh 'npm test'
      }
    }
    stage('Build') {
      steps {
        echo 'Building the application'
        sh 'npm run build'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying the application'
        sh 'npm run deploy'
      }
    }
    stage('Cleanup') {
      steps {
        echo 'Cleaning up'
        sh 'rm -rf temp-folder'
      }
    }
  }
}
